<div class="container w-xxl w-auto-xs" ng-init="app.settings.container = false;">
    <a href class="navbar-brand block m-t">{{app.name}}</a>
    <div ng-show="isCollapsed" class="m-b-lg">
        <div class="wrapper text-center">
            <strong>Sign up to find interesting thing</strong>
        </div>
        <form name="form" class="form-validation">
            <div class="text-danger wrapper text-center" ng-show="authError">
                {{authError}}
            </div>
            <div class="list-group list-group-sm">
                <div class="list-group-item">
                    <input placeholder="fullname" class="form-control no-border" ng-model="req.Fullname">
                </div>
                <div class="list-group-item">
                    <input placeholder="username" class="form-control no-border" ng-model="req.Username" required>
                </div>
                <div class="list-group-item">
                    <input type="email" placeholder="email" class="form-control no-border" ng-model="req.Email" required>
                </div>
                <div class="list-group-item">
                    <input type="password" placeholder="password" class="form-control no-border" ng-model="req.Password" required>
                </div>
            </div>
            <div class="checkbox m-b-md m-t-none">
                <label class="i-checks">
                    <input type="checkbox" ng-model="agree" required><i></i> Agree the <a ng-click="openTermsAndPolicy();">terms and policy</a>
                </label>
                <script type="text/ng-template" id="termsAndPolicyModalContent.html">
                    <div ng-include="'/modals/TermsAndPolicy'"></div>
                </script>
            </div>
            <button type="submit" class="btn btn-lg btn-primary btn-block" ng-click="signup()" ng-disabled='form.$invalid'>Sign up</button>
            <div class="line line-dashed"></div>
            <p class="text-center"><small>Already have an account?</small></p>
        </form>
    </div>
    <div collapse="isCollapsed" class="m-t">
        <div class="alert alert-success">
            <p>An activation link sent to your email address, please check your inbox.</p>
        </div>
    </div>
    <div class="m-t">
        <a ui-sref="auth.signin" class="btn btn-lg btn-default btn-block">Sign in</a>
    </div>
</div>