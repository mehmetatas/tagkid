<div class="modal-header">
    <h3 class="modal-title">Authentication Required</h3>
</div>
<div class="modal-body">
    <div class="text-danger wrapper text-center" ng-show="authError">
        {{authError}}
    </div>

    <div collapse="mode">
        <div collapse="signupOk" class="m-b-lg">
            <div class="wrapper text-center">
                <strong>Sign up to find interesting thing!</strong>
            </div>
            <form name="signupForm" class="form-validation">
                <div class="list-group list-group-sm">
                    <div class="list-group-item">
                        <input placeholder="fullname" class="form-control no-border" ng-model="signupReq.Fullname" required>
                    </div>
                    <div class="list-group-item">
                        <input placeholder="username" class="form-control no-border" ng-model="signupReq.Username" required>
                    </div>
                    <div class="list-group-item">
                        <input type="email" placeholder="email" class="form-control no-border" ng-model="signupReq.Email" required>
                    </div>
                    <div class="list-group-item">
                        <input type="password" placeholder="password" class="form-control no-border" ng-model="signupReq.Password" required>
                    </div>
                </div>
                <div class="checkbox m-b-md m-t-none">
                    <label class="i-checks">
                        <input type="checkbox" ng-model="agree" required><i></i> Agree the <a ng-click="openTermsAndPolicy();">terms and policy</a>
                    </label>
                    <script type="text/ng-template" id="termsAndPolicyModalContent.html">
                        <div ng-include="'/modals/TermsAndPolicy'"></div>
                    </script>
                </div>
                <button type="submit" class="btn btn-lg btn-primary btn-block" ng-click="signup()" ng-disabled='signupForm.$invalid'>Sign up</button>
                <div class="line line-dashed"></div>
                <p class="text-center"><small>Already have an account?</small></p>
                <a href ng-click="toSignin(true)" class="btn btn-lg btn-default btn-block">Sign in</a>
            </form>
        </div>
        <div collapse="!signupOk" class="m-t">
            <div class="alert alert-success">
                <p>An activation link sent to your email address, please check your inbox.</p>
            </div>
        </div>
    </div>

    <div collapse="mode != 1">
        <div class="m-b-lg">
            <div class="wrapper text-center">
                <strong>Sign in to get in touch!</strong>
            </div>
            <form name="signinForm" class="form-validation">
                <div class="list-group list-group-sm">
                    <div class="list-group-item">
                        <input placeholder="email or username" class="form-control no-border" ng-model="signinReq.EmailOrUsername" required>
                    </div>
                    <div class="list-group-item">
                        <input type="password" placeholder="password" class="form-control no-border" ng-model="signinReq.Password" required>
                    </div>
                </div>
                <button type="submit" class="btn btn-lg btn-primary btn-block" ng-click="signin()" ng-disabled='signinForm.$invalid'>Sign in</button>
                <div class="text-center m-t m-b"><a href ng-click="toForgotPwd()">Forgot password?</a></div>
                <div class="line line-dashed"></div>
                <p class="text-center"><small>Do not have an account?</small></p>
                <a href ng-click="toSignup()" class="btn btn-lg btn-default btn-block">Create an account</a>
            </form>
        </div>
    </div>

    <div collapse="mode != 2">
        <div collapse="passwordSent" class="m-b-lg">
            <div class="wrapper text-center">
                <strong>Input your email to reset your password</strong>
            </div>
            <form name="forgotPwdForm" class="form-validation">
                <div class="list-group list-group-sm">
                    <div class="list-group-item">
                        <input type="email" placeholder="email" ng-model="forgotPwdReq.Email" class="form-control no-border" required>
                    </div>
                </div>
                <button type="submit" ng-disabled="forgotPwdForm.$invalid" class="btn btn-lg btn-primary btn-block" ng-click="sendNewPassword()">Send</button>
            </form>
            <div class="text-center m-t m-b"><a href ng-click="toSignin(false)">Oh, I remembered that!</a></div>
        </div>
        <div collapse="!passwordSent" class="m-t">
            <div class="alert alert-success">
                <p>A reset link sent to your email address, please check it in 7 days. <a href ng-click="toSignin(false)" class="btn btn-sm btn-success">Sign in</a></p>
            </div>
        </div>
    </div>
</div>
<div class="modal-footer">

</div>